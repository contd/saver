{{#each links }}

<div class="uk-section-muted uk-grid-medium uk-flex-center uk-child-width-3-4" uk-grid>

    <div class="uk-card uk-card-default" id="link-card-id" data-index="{{id}}">
      <div class="uk-card-header uk-background-muted">

        <div class="uk-grid uk-grid-small uk-padding-remove uk-margin-remove" uk-grid>
          <div class="uk-margin-remove uk-padding-remove uk-width-expand">

            <h1 class="article-title" id="article-title"
              data-index="{{id}}" contenteditable="true">{{title}}</h1>
          </div>
          <div class="uk-margin-remove uk-padding-remove uk-width-auto">
            <a class="uk-button uk-button-default uk-button-small uk-margin-small-left"
              href="/editor/{{id}}">EDIT</a>
            <a class="uk-button uk-button-default uk-button-small uk-margin-small-left"
              href="/{{#unless is_starred }}{{#if is_archived }}archive{{else}}by{{/if}}/{{firstTag tags}}{{/unless}}">{{#unless is_starred}}BACK{{else}}HOME{{/unless}}</a>
          </div>
        </div>

        <div class="uk-grid-small uk-flex-middle uk-text-meta" uk-grid>

          <div class="uk-width-auto uk-text-nowrap">
            <a href="{{url}}" target="_blank" uk-tooltip="Go to original link"><span uk-icon="link"></span></a>
          </div>

          <div class="uk-width-auto uk-text-nowrap">
            <input type="text" id="datepicker" class="uk-input uk-width-expand" value="{{moment created_at}}">
          </div>

          <div class="uk-width-auto uk-text-nowrap">
            <span uk-icon="clock"></span>
            <span uk-tooltip="Aproximate reading time">{{readtime reading_time}}min</span>
          </div>

          <div class="uk-width-auto uk-text-nowrap">
            <a href="/starred/{{id}}" uk-tooltip="Toggle Starred">
            {{> star is_starred=is_starred}}
            </a>
          </div>

          <div class="uk-width-auto uk-text-nowrap">
            <a href="/archived/{{id}}" uk-tooltip="Archive or Unarchive">
              {{> check is_archived=is_archived}}
            </a>
          </div>

          <div class="uk-width-expand">
            <input type="text" id="tags" data-index="{{id}}" value="{{tags}}" />
          </div>
        </div>
      </div>
      <div class="uk-card-body">
        <div class="uk-article article">
          {{{hrefreplace (codereplace content)}}}
        </div>
      </div>
      <div class="uk-card-footer">

      </div>
    </div>

</div>

{{/each}}
